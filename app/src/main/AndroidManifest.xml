<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.search.victor.searchengine"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Search"
            android:label="@string/title_activity_search">
        </activity>
        <activity
            android:name=".Input"
            android:label="@string/title_activity_input">
        </activity>
        <activity
            android:name=".AddOrganizationActivity"
            android:label="AddOrganizationActivity">
        </activity>
        <activity
            android:name=".results"
            android:label="@string/title_activity_results"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Organization"
            android:label="@string/title_activity_organization"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
